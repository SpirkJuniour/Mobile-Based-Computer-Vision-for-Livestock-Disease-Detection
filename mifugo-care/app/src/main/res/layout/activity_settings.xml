<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_primary"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Notifications Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_notifications"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Washa arifa"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_regular" />

                    <Switch
                        android:id="@+id/switch_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchStyle" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Diagnosis Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mipangilio ya Uchunguzi"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_auto_diagnosis"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_regular" />

                    <Switch
                        android:id="@+id/switch_auto_diagnosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchStyle" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chunguza magonjwa kiotomatiki wakati picha zinapopigwa"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_md"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:alpha="0.7" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Privacy Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faragha na Data"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_data_sharing"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_regular" />

                    <Switch
                        android:id="@+id/switch_data_sharing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SwitchStyle" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taarifa za Programu"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toleo"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_regular" />

                    <TextView
                        android:id="@+id/text_version"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1.0.0"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jengo"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_regular" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- About Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuhusu Mifugo Care"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xl"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_display_medium"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mifugo Care ni programu ya simu ya kompyuta ya kuona kwa ajili ya kugundua magonjwa ya mifugo. Inasaidia wakulima kutambua magonjwa mapema na kutoa mapendekezo ya matibabu."
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_md"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
