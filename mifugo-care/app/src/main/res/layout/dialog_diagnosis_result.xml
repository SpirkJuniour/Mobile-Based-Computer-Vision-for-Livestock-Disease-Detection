<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_lg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_lg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/icon_size_lg"
            android:layout_height="@dimen/icon_size_lg"
            android:src="@drawable/ic_camera_diagnose"
            android:tint="@color/accent_primary"
            android:layout_marginEnd="@dimen/spacing_md" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diagnosis_result"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xxl"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_display_bold" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/icon_size_lg"
            android:layout_height="@dimen/icon_size_lg"
            android:src="@drawable/ic_arrow_forward"
            android:rotation="45"
            android:tint="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_sm"
            android:contentDescription="@string/btn_cancel"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Diagnosis Image -->
    <ImageView
        android:id="@+id/image_diagnosis"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="@dimen/spacing_md"
        android:background="@color/background_secondary"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cow"
        android:contentDescription="Diagnosis image"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Disease Name -->
    <TextView
        android:id="@+id/text_disease_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:text="Foot and Mouth Disease"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_xl"
        android:textStyle="bold"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textAlignment="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/image_diagnosis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confidence Score -->
    <LinearLayout
        android:id="@+id/confidence_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_md"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/confidence_background"
        android:padding="@dimen/padding_sm"
        app:layout_constraintTop_toBottomOf="@id/text_disease_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kujiamini: "
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_md"
            android:fontFamily="@font/sf_pro_text_medium" />

        <TextView
            android:id="@+id/text_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85.2%"
            android:textColor="@color/accent_primary"
            android:textSize="@dimen/text_size_md"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_text_bold" />

    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_md"
            android:text="Hali: Imethibitishwa"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_lg"
        android:fontFamily="@font/sf_pro_text_medium"
        android:background="@drawable/status_background"
        android:padding="@dimen/padding_sm"
        app:layout_constraintTop_toBottomOf="@id/confidence_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Symptoms Section -->
    <LinearLayout
        android:id="@+id/symptoms_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_md"
        app:layout_constraintTop_toBottomOf="@id/text_status">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diagnosis_symptoms"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <TextView
            android:id="@+id/text_symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fever, blisters in mouth and feet, lameness, excessive salivation"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_md"
            android:fontFamily="@font/sf_pro_text_regular"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Treatment Section -->
    <LinearLayout
        android:id="@+id/treatment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_md"
        app:layout_constraintTop_toBottomOf="@id/symptoms_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diagnosis_treatment"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <TextView
            android:id="@+id/text_treatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaccination, isolation, supportive care, antibiotic treatment for secondary infections"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_md"
            android:fontFamily="@font/sf_pro_text_regular"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_sm"
        app:layout_constraintTop_toBottomOf="@id/treatment_section"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_save_diagnosis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:background="@drawable/button_primary_selector"
            android:text="@string/btn_save_diagnosis"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_lg"
            android:fontFamily="@font/sf_pro_text_medium"
            android:padding="@dimen/padding_md" />

        <Button
            android:id="@+id/btn_share_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:background="@drawable/button_secondary_selector"
            android:text="@string/btn_share"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_lg"
            android:fontFamily="@font/sf_pro_text_medium"
            android:padding="@dimen/padding_md" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
