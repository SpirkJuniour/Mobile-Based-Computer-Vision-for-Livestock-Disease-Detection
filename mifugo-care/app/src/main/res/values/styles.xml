<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MifugoCare" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_primary_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorOnSecondary">@color/text_white</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_white</item>
        
        <!-- Custom attributes -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- App Bar Theme -->
    <style name="AppBarTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Airbnb-style Button Styles -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_airbnb_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_airbnb_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonGhost" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">@drawable/button_airbnb_ghost</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <!-- Airbnb-style Text Styles -->
    <style name="TextHeading1" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextHeading2" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextHeading3" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextBody" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextBodySecondary" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextCaption" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TextSmall" parent="Widget.Material3.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <!-- Airbnb-style Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardStyleLarge" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="CardStyleRounded" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/surface_primary</item>
        <item name="strokeColor">@color/border_light</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Dialog Styles -->
    <style name="DialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background_airbnb</item>
        <item name="android:windowCornerRadius">16dp</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="ProgressBarStyle" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:progressTint">@color/accent_primary</item>
        <item name="android:indeterminateTint">@color/accent_primary</item>
        <item name="android:trackTint">@color/border_light</item>
    </style>

    <!-- Switch Style -->
    <style name="SwitchStyle" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumbTint">@color/accent_primary</item>
        <item name="android:trackTint">@color/accent_primary</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_medium</item>
        <item name="boxStrokeColorFocused">@color/accent_primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background_primary</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>

    <!-- Airbnb-style Chip -->
    <style name="ChipAirbnb" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipBackgroundColor">@color/faint_grey</item>
        <item name="chipStrokeColor">@color/border_medium</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_medium</item>
    </style>

    <!-- Airbnb-style Floating Action Button -->
    <style name="FloatingActionButtonAirbnb" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_primary</item>
        <item name="tint">@color/text_white</item>
        <item name="elevation">2dp</item>
        <item name="pressedTranslationZ">4dp</item>
    </style>
</resources>
